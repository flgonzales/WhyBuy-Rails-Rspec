
  <%= form_for (@item) do |f| %>
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %> prohibed this <strong>item<strong> to be saved.</h2>

      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <br/>
    <div class="form-group">
      <%= f.label :description %><br/>
      <%= f.text_area :description, size: "48x6" %>
    </div>
    <div class="checkbox">
      <%= f.label :available %>
      <%= f.check_box :available %>

    </div>
    <!-- <div>
      <br/>
      <%= f.label :image %><br/>
      <%= f.file_field :image %> -->

    </div>
    <div class="date">
      <br/>
      <%= f.label "Available from" %>
      <%= f.date_field :start_avail %>
    </div>
    <div class="date">
      <%= f.label "Available until " %>
      <%= f.date_field :finish_avail %>

    </div>
    <br/>
    <div class="btn-group">
      <%= link_to 'Return', items_path, class: "btn btn-default"%>
      <%= f.submit (@item.new_record? ? "Create" : "Update"), class: "btn btn-primary"%>
    </div>
  </div>
  <% end %>
